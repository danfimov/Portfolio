---
import '../styles/main.scss'
import NavBar from '../components/navigation_bar/component.astro'

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon"  href="favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Dima Anfimov. Personal blog.">

		<title>{title}</title>
	</head>
	<body>
		<NavBar/>

		<section class='container--main'>
			<slot />
		</section>
	</body>
</html>
